<% signed_in = signed_in? %>
<div class="panel panel-default">
	<div class="panel-heading"><font size="4">Comments</font></div>
	<div class="panel-body">
		<table>
		  <tbody>
			  <tr>
				<td>
					<div data-id="comments">
						<% if @comments.each do |comment| %>
							<p style="margin:0;">
								<%= comment.content%>
								<%= render 'flag_button', :this_type => "comment", :this_id => comment.id, :comment_id => comment.id, :num_flags => comment.num_flags %>
								<% if signed_in %>
									<%= link_to 'Remove', remove_comment_path(:comment_id => comment.id), method: :delete, remote: true, data: { confirm: 'Do you really want to delete this comment?' }, :class => "btn btn-default" %>
								<% end %>
							</p>
							<p style="padding-left:1em;margin:0;">
								<font size="1">at <%= comment.created_at%></font>
							</p>
						<% end.empty? %>
  							Aucun commentaire / No comments
						<% end %>
					</div>								
				</td>				
			  </tr>
		  </tbody>
		</table>
	</div>
</div>