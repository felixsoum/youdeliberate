source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'

# Use sqlite3 as the database for Active Record
gem 'sqlite3'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use jquery sort table by its column
gem 'jquery-tablesorter'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.1.2'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]

# Use nokogiri for parsing xml files
gem 'nokogiri'

# Use rubyzip to read zip files
gem 'rubyzip'

# Use rake for CI
gem 'rake'

# Use coveralls for test coverage
gem 'coveralls', require: false

# Use jquery-turbolinks to enable binding to jQuery.ready()
gem 'jquery-turbolinks'

# Use html5shiv-rails to shim HTML5 sectioning elements
gem 'html5shiv-rails'

# Use respond-rails to shim CSS3 media queries
gem 'respond-rails'

# Use jasminerice to test JavaScript
gem 'jasminerice', :git => 'https://github.com/bradphelan/jasminerice.git'

# Use guard-jasmine to automate Jasmine
gem 'guard-jasmine'

# Use google-analytics-rails for simple analytics
gem 'google-analytics-rails'

# Use js-routes to allow usage of Rails routes in JS code.
gem "js-routes"

# Use fancybox2-rails to display content in a Mac-style lightbox 
gem 'fancybox2-rails', '~> 0.2.8'

# Use bootstrap-sass for front-end development
gem 'bootstrap-sass', '~> 3.1.1'

# Use ruby-mp3info to get track lengths without loading in jPlayer
gem 'ruby-mp3info'
